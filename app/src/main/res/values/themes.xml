<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlayLab" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/capstone_primary_40</item>
        <item name="colorOnPrimary">@color/capstone_primary_100</item>
        <item name="colorPrimaryContainer">@color/capstone_primary_90</item>
        <item name="colorOnPrimaryContainer">@color/capstone_primary_10</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/capstone_secondary_40</item>
        <item name="colorOnSecondary">@color/capstone_secondary_100</item>
        <item name="colorSecondaryContainer">@color/capstone_secondary_90</item>
        <item name="colorOnSecondaryContainer">@color/capstone_secondary_10</item>
        <!--- Tertiary Color -->
        <item name="colorTertiary">@color/capstone_tertiary_40</item>
        <item name="colorOnTertiary">@color/capstone_tertiary_100</item>
        <item name="colorTertiaryContainer">@color/capstone_tertiary_90</item>
        <item name="colorOnTertiaryContainer">@color/capstone_tertiary_10</item>
        <!--- Error Color -->
        <item name="colorError">@color/Error40</item>
        <item name="colorOnError">@color/Error100</item>
        <item name="colorErrorContainer">@color/Error90</item>
        <item name="colorOnErrorContainer">@color/Error10</item>
        <!--- Surface Color -->
        <item name="colorSurface">@color/capstone_neutral_99</item>
        <item name="colorOnSurface">@color/capstone_neutral_10</item>
        <item name="colorSurfaceVariant">@color/capstone_neutral_variant_90</item>
        <item name="colorOnSurfaceVariant">@color/capstone_neutral_variant_30</item>
        <item name="android:colorBackground">@color/capstone_neutral_99</item>
        <item name="colorOnBackground">@color/capstone_neutral_10</item>
        <item name="colorOutline">@color/capstone_neutral_variant_50</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="TextContentDetail">
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textColor">@color/capstone_neutral_10</item>
    </style>

    <style name="Theme.PlayLab.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PlayLab.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PlayLab.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
